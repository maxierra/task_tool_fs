<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizador de Tabla</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        textarea {
            width: 100%;
            height: 150px;
            margin-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            table-layout: fixed; /* Hace que las columnas tengan un ancho fijo */
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-overflow: ellipsis; /* Agrega puntos suspensivos si el texto es demasiado largo */
            overflow: hidden; /* Oculta el desbordamiento del texto */
            white-space: nowrap; /* Evita el ajuste de línea dentro de las celdas */
        }
        th {
            background-color: #f2f2f2;
        }
        th, td {
            width: 11%; /* Establece el ancho fijo para cada columna */
        }
        td {
            word-break: break-word; /* Permite el salto de palabra si es necesario */
        }
    </style>
</head>
<body>
    <%- include('navbar') %>
    <h1>Visualizador de Tabla</h1>
    <textarea id="inputText" placeholder="Pega aquí los datos separados por tabulaciones o comas"></textarea>
    <button onclick="processText()">Mostrar Tabla</button>
    
    <table id="dataTable">
        <thead>
            <tr>
                <th>REQUESTMESSAGECOMPLETE</th>
                <th>RESULTMESSAGECOMPLETE</th>
                <th>ERRORCODE</th>
                <th>ERRORSOURCE</th>
                <th>ERRORREASON</th>
                <th>BIN</th>
                <th>DEPOSITACCOUNTID</th>
                <th>AMOUNT</th>
                <th>VISATID</th>
            </tr>
        </thead>
        <tbody>
            <!-- Las filas de datos se agregarán aquí -->
        </tbody>
    </table>

    <script>
        function processText() {
            const text = document.getElementById('inputText').value;
            const rows = text.trim().split('\n');
            const tableBody = document.getElementById('dataTable').getElementsByTagName('tbody')[0];

            // Limpiar la tabla antes de agregar nuevos datos
            tableBody.innerHTML = '';

            // Títulos a ignorar
            const headers = [
                'REQUESTMESSAGECOMPLETE',
                'RESULTMESSAGECOMPLETE',
                'ERRORCODE',
                'ERRORSOURCE',
                'ERRORREASON',
                'BIN',
                'DEPOSITACCOUNTID',
                'AMOUNT',
                'VISATID'
            ];

            // Procesar filas
            rows.forEach(row => {
                const cells = row.split('\t'); // Asume que los datos están separados por tabulaciones
                
                // Verificar si la primera celda es un título conocido
                if (!headers.includes(cells[0])) {
                    const newRow = tableBody.insertRow();

                    cells.forEach(cell => {
                        const newCell = newRow.insertCell();
                        newCell.textContent = cell;
                    });
                }
            });
        }
    </script>
</body>
</html>
